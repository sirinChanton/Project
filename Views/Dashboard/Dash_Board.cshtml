@{
    Layout = "_Navbar";
    ViewData["Title"] = "Dashboard";
}



<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <style>
        * {
            box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
        }

        body {
            margin: 0;
            background: #fff;
        }

        .dashboard {
            padding: 30px 40px;
        }

        .dashboard h1 {
            font-size: 32px;
            margin-bottom: 25px;
        }

        .card-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 25px;
        }

        .card {
            border: 2px solid #000;
            border-radius: 25px;
            padding: 25px 30px;
            min-height: 150px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-title {
            font-size: 22px;
        }

        .card-value {
            font-size: 44px;
            font-weight: bold;
            text-align: center;
        }

        /* responsive 
         (max-width: 768px) {
            .card-grid {
                grid-template-columns: 1fr;
            }
        }
        */
    </style>
</head>

<body>
    <div class="dashboard">
        <h1>Dashboard</h1>

        @ViewBag.Username
        @ViewBag.Password

        <div class="card-grid">
            <div class="card">
                <div class="card-title">รายได้</div>
                <div class="card-value">100,000 ฿</div>
            </div>

            <div class="card">
                <div class="card-title">จำนวนผู้เข้าใช้</div>
                <div class="card-value">10,000 คน</div>
            </div>

            <div class="card">
                <div class="card-title">จำนวนไข่</div>
                <div class="card-value">10,000 ใบ</div>
            </div>

            <div class="card">
                <!-- เว้นไว้สำหรับข้อมูลในอนาคต -->
            </div>
        </div>
    </div>
</body>
</html>
