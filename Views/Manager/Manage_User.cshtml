@{
    Layout = "_Navbar";
    ViewData["Title"] = "Manage User";
}

<style>
/* ---------- Layout ---------- */
.content {
    padding: 30px;
}

.top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2px solid #000;
    padding-bottom: 10px;
    margin-bottom: 20px;
}

/* ---------- Table ---------- */
table {
    width: 100%;
    border-collapse: collapse;
    background: #fff;
}

th, td {
    border: 1px solid #333;
    padding: 12px;
    text-align: center;
}

th {
    background-color: #e0e0e0;
    font-weight: bold;
}

/* ---------- Add Button ---------- */
.add-btn {
    font-size: 22px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: #3d7ec1;
    color: #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* ---------- Popup (CSS Only) ---------- */
#popupToggle {
    display: none;
}

/* overlay */
.overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.35);
    backdrop-filter: blur(6px);
    display: none;
    z-index: 2000;
}

/* popup */
.popup {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.9);
    background: #fff;
    border-radius: 12px;
    width: 380px;
    padding: 25px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    display: none;
    z-index: 2100;
    transition: all 0.25s ease;
}

/* show popup */
#popupToggle:checked ~ .overlay,
#popupToggle:checked ~ .popup {
    display: block;
}

#popupToggle:checked ~ .popup {
    transform: translate(-50%, -50%) scale(1);
}

/* ---------- Form ---------- */
.popup h3 {
    margin-bottom: 15px;
    text-align: center;
}

.popup input,
.popup select {
    width: 100%;
    padding: 10px;
    margin-bottom: 12px;
}

.popup button {
    width: 100%;
    padding: 10px;
    background: #3d7ec1;
    color: #fff;
    border: none;
    cursor: pointer;
    border-radius: 6px;
}
</style>

<div class="content">

    <div class="top-bar">
        <h2>Manage User</h2>
        <label for="popupToggle" class="add-btn">+</label>
    </div>

    <!-- Table -->
    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Username</th>
                <th>Tel.</th>
                <th>E-mail</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>admin</td>
                <td>081-xxx-xxxx</td>
                <td>admin@mail.com</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- CSS toggle -->
<input type="checkbox" id="popupToggle" />

<!-- Overlay (click to close) -->
<label for="popupToggle" class="overlay"></label>

<!-- Popup -->
<div class="popup">
    <h3>Add User</h3>

    <form asp-controller="Account" asp-action="AddUser" method="post">
        <input type="text" name="Username" placeholder="Username" required />

        <select name="Role" required>
            <option value="" disabled selected>เลือก Role</option>
            <option value="Admin">Admin</option>
            <option value="Seller">Seller</option>
            <option value="User">User</option>
        </select>

        <input type="tel" name="Tel" placeholder="Tel." required />
        <input type="email" name="Email" placeholder="E-mail" required />

        <button type="submit">Submit</button>
    </form>
</div>
